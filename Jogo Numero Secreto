from random import randint
num = randint(0,10)

numero =int(input('Digite o valor que você acha ser a variável num: '))

while(numero!=num):
    if numero>num:
        print('O numero digitado é maior do que o nomero escolhido! tente novamente!')
        numero=int(input('Digite o numero que voce acredita ser a variável num: '))
    else:
        print('Esse número é menor do que o número secreto, tente novamente!')
        numero=int(input('Digite o numero que voce acredita ser o numero secreto: '))
print('Parabéns, voce encontrou o numero secreto!')
